<?xml version="1.0"?>
<form string="Inpatient Registration Information">
    <group colspan="4" id="group_admin_data" col="12" string="Patient">
        <field name="patient" colspan="5" xexpand="1" />
        <label id="lbl_upi_mrn" string="UPI/MRN" />
        <field name="puid" />
        <field name="medical_record_num" />
        <label name="sex_display" />
        <field name="sex_display" />
        <label name="age" />
        <field name="age" />
    </group>
    <newline />
    <notebook>
        <page string="Administrative data" id="page_admin_data">
            <group colspan="4" id="group_admin_data_holder1">
                <group colspan="4" id="group_admin_bed_reg" col="6">
                    <label name="hospitalization_date"/>
                    <field name="hospitalization_date"/>
                    <label name="bed"/>
                    <field name="bed"/>
                    <label name="hospital_ward" />
                    <field name="hospital_ward" />
                </group>
                    <newline/>
                <group colspan="4" col="6" id="group_admin_data_holder2">
                    <label name="speciality"/>
                    <field name="speciality"/>
                    <label name="attending_physician"/>
                    <field name="attending_physician"/>
                    <label name="operating_physician"/>
                    <field name="operating_physician"/>
                </group>
                    <newline/>
                <group colspan="4" col="6" id="group_admin_data_holder3">
                    <label name="admission_type"/>
                    <field name="admission_type"/>
                    <label name="admission_reason"/>
                    <field name="admission_reason"/>
                    <label name="name" />
                    <field name="name" />
                    <newline/>
                    <separator name="info" colspan="8"/>
                    <field name="info" colspan="8"/>
                </group>
            </group>
            <newline/>
            <field name="bed_transfers" colspan="4" height="140" />
            <newline/>
            <group id="grp_encounter_state" colspan="4" col="6">
                <label name="encounter" />
                <field name="encounter" colspan="3"/>
                <label name="state" />
                <field name="state" readonly="1"/>
            </group>
            <newline />
            <group colspan="4" col="10" id="group_registration_holder1">
                <label name="disposition" />
                <field name="disposition" width="90" />
                <label name="discharged_by" />
                <field name="discharged_by"/>
                <label name="discharge_date" />
                <field name="discharge_date" />
                <!-- <group colspan="1" col="2" id="group_registration_holder2"> -->
                    <button name="confirmed" string="Confirm" help="Confirm Registration / Make the reservation" icon="icon-ok"/>
                <!-- </group> -->
                <!-- <group colspan="2" col="6" id="group_registration_holder3"> -->
                    <button name="cancel" help="Cancel Registration" string="Cancel" icon="icon-cancel" confirm="Cancel the in-patient registration process ?"/>
                    <button name="admission" help="Admit patient to ward/bed" string="Admit Patient" icon="icon-ok" confirm="Admit the patient to the facility and assign the selected bed"/>
                    <button name="discharge" help="Discharge Patient" string="Discharge" icon="icon-home" confirm="You are about to SIGN the discharge for this patient from the facility. No further changes can be made "/>
                <!-- </group> -->
            </group>

        </page>
        <page string="Nutrition" id="page_inpatient_nutrition">
            <label name="diet_belief"/>
            <field name="diet_belief"/>
            <label name="diet_vegetarian"/>
            <field name="diet_vegetarian"/>
            <newline/>
            <field colspan="4" name="therapeutic_diets"/>
            <newline/>
            <separator colspan="4" id="separator_nutrition_notes" string="Other nutrition notes / directions"/>
            <newline/>
            <field colspan="4" name="nutrition_notes"/>
        </page>
        <page string="Medication Plan" id="page_inpatient_medication">
            <field name="medications"/>
        </page>
        <page string="Care Plan" id="page_care_plan">
            <label name="nursing_plan"/>
            <field name="nursing_plan"/>
            <newline/>
            <label name="discharge_plan"/>
            <field name="discharge_plan"/>
        </page>
        <page string="MRCA" id="page_inpatient_icd">
            <notebook>
                <page string="ICD 10" id="icd10">
                    <group colspan="4" col="4" id="page_inpatient_icd_holder1">
                        <separator colspan="4" id="separator_nutrition_notes" string="Main Condition"/>
                        <field colspan="2" name="icd10"/>
                        <label name="new_diag"/>
                        <field name="new_diag"/>
                        <newline/>
                        <label name="re_admiss"/>
                        <field name="re_admiss"/>
                    </group>
                    <group colspan="4" col="6" id="page_inpatient_icd_holder1_grp1">
                        <separator colspan="4" id="separator_nutrition_notes" string="Other Condition"/>
                        <newline/>
                        <field colspan="8" name="info"/>
                    </group>
                    <newline/>
                    <group colspan="4" col="6" id="page_inpatient_icd_holder1_grp2">
                        <separator colspan="4" id="separator_nutrition_notes" string="Procedures"/>
                        <newline/>
                        <field colspan="8" name="info"/>
                    </group>
                    <newline/>
                    <group id="grp_encounter_state" colspan="4" col="6">
                        <label name="encounter"/>
                        <field name="encounter" colspan="3"/>
                        <label name="state"/>
                        <field name="state" readonly="1"/>
                        <label name="disposition"/>
                        <field name="disposition" colspan="2"/>
                        <label name="discharge_date"/>
                        <field name="discharge_date" colspan="1"/>
                        <button name="confirmed" string="Discharge" icon="icon-ok"/>
                    </group>
                </page>
                <page string="ICD 11" id="icd11">
                    <group colspan="4" col="4" id="page_inpatient_icd_holder2">
                        <separator colspan="4" id="separator_nutrition_notes" string="Main Condition Code (ICD11)"/>
                        <field colspan="2" name="icd11"/>
                        <label name="new_diag"/>
                        <field name="new_diag"/>
                    </group>
                    <group colspan="4" col="6" id="page_inpatient_icd_holder2_desc1">
                        <separator colspan="4" id="icd11_description" string="Main Condition - Interpretation"/>
                        <newline/>
                        <field colspan="8" name="icd11_description"/>
                    </group>
                    <newline/>
                    <group colspan="4" col="6" id="page_inpatient_icd_holder2_grp1">
                        <separator colspan="4" id="separator_nutrition_notes" string="Other Condition"/>
                        <newline/>
                        <field colspan="8" name="info"/>
                    </group>
                    <newline/>
                    <group id="grp_encounter_state" colspan="4" col="6">
                        <label name="encounter"/>
                        <field name="encounter" colspan="3"/>
                        <label name="state"/>
                        <field name="state" readonly="1"/>
                        <label name="disposition"/>
                        <field name="disposition" colspan="2"/>
                        <label name="discharge_date"/>
                        <field name="discharge_date" colspan="1"/>
                        <button name="confirmed" string="Discharge" icon="icon-ok"/>
                    </group>
                </page>
            </notebook>
        </page>
